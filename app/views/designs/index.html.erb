<h2>Newest Constrvcts</h2>


<div class="grid">
<% @designs.each do |design| %>
    <div class='grid-design-group'>
      <div class='design-unit'>
        <%= link_to design do %>
          <%= image_tag design.preview.thumb200 %>
        <% end %>
        <div>
        <h5><%= design.title %></h5>
        <span> by <%= link_to design.user.username, design.user %></span>  
        </div>
      </div>
      
    <% if current_admin %>  
      <div class="admin-unit">
      <%= image_tag design.form.thumbnail, :width => 100 %>
      <%= image_tag design.texture.image.thumbnail, :width => 100 %>

      <%= link_to 'Edit', edit_design_path(design) %>
      <%= link_to 'Destroy', design, :method => :delete, :data => { :confirm => 'Are you sure?' } %>
      </div>
      <% end %>
      
    </div>
<% end %>
</div>

<%= link_to 'New Constrvct', root_path %>
