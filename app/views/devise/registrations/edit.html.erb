<div class="login-box middle" style="width: 600px; height:500px;">

<h2>Edit Profile</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :multipart => true }) do |f| %>

<div>
  <div class="col2">
  <%= image_tag current_user.avatar.url(:medium), :width =>"200px" %>  
  <div>Change Profile Pic<br />
  <%= f.file_field :avatar %></div>
  </div>

  <div class="col2">
  <div><%= f.label :username %><br />
  <%= f.text_field :username %></div>

  <div><%= f.label :email %> <i>(not shown to public)</i><br />
  <%= f.email_field :email %></div>
  </div>
</div>  

  <div id="change-password" style="display:none;">
  <div class="col2"><label>new password</label><br />
  <%= f.password_field :password, :autocomplete => "off" %></div>

  <div class="col2"><label>new password again</label><br />
  <%= f.password_field :password_confirmation %></div>
  </div>

  <div class="col2">
  <div><%= f.label :current_password %> <br /><i>(to confirm your changes)</i><br />
  <%= f.password_field :current_password %></div>

  <%= devise_error_messages! %>
  <div><%= f.submit "Update" %></div>
  </div>
<% end %>

<!--
<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>
-->
</div>
