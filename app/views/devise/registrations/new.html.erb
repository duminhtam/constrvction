  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :invite_code %><br />
  <%= f.text_field :invite_code %></div>


  <%= devise_error_messages! %>

<% end %>
  <div id="sign-up" class="circle-button"><span class="red-circle" ></span><img src="/assets/join.png" alt="Join"/></div>
  
  
</div>

<div id="constrvct-info">
  <img src="/assets/formula.png" /> 
  <p>
  Unlock your own personal fashion design studio.
  <br /><br />
  Constrvct it, wear it.
  </p>
  <h2>
  It's a <br />
  fashion <br />
  design <br />
  revolution.
  </h2>
</div>
</div>
<script>
var charList = [' ',':', '/', '\\', '&', ';', '+', '=','!', '?', '<', '>', '|', '(', ')', '[', ']', '{', '}', '&', '@', '$', '^', "'", '"', ",", '.', '~', '`', '*', '%', '#' ]; // etc...

function sanitize(el, input) {
  var s = ''+input;
  
	s = s.toLowerCase();
    for (var i=0; i<charList.length; i++) {
        var j = s.replace(charList[i], '');
        s=j;
    }
    
    el.value = s;
}
$('#user_username').keyup(function() {
  sanitize(this, this.value);
})

$('#sign-up').click(function() {
  $('#new_user').submit();
})

$('#sign-in').click(function() {
  $(this).parent().parent().submit();
})

$('#show-login').click(function() {
  $('#signup-block').hide();
  $('#login-block').show();
  $('#show-signup').show();
  $('#show-login').hide();
})
$('#show-signup').click(function() {
  $('#login-block').hide();
  $('#signup-block').show();
  $('#show-login').show();
  $('#show-signup').hide();
})

</script>

